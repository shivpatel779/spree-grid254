<div class="content indent" >
  <div class="thumb-box">
    <div class="container">
      <h2><strong>Sign</strong> up</h2>

      <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>


      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="tabs">
          <div class="tab-content" data-hook="login_extras">
            <div id="tab1" class="tab active">
              <div class="row">

                <div class="col-lg-10 col-md-10 col-sm-10">

                  <%= form_for resource, :as => :spree_user, html: { id: 'contact-form' }, :url => spree.registration_path do |f| %>

                      <fieldset>

                        <div>
                          <div class="tab-form-lable">Email Address</div>
                          <label class="email">
                            <%= f.text_field :email, :placeholder => Spree.t(:email) %>
                          </label>
                        </div>


                        <div>
                          <div class="tab-form-lable">Password</div>
                          <label class="email">
                            <%= f.password_field :password, :placeholder => Spree.t(:password) %>
                          </label>
                        </div>

                        <div>
                          <div class="tab-form-lable">Confirm Password</div>
                          <label class="email">
                            <%= f.password_field :password_confirmation, :placeholder => Spree.t(:confirm_password) %>
                          </label>
                        </div>

                        <div>
                          <div class="tab-form-lable">Phone</div>
                          <label class="email">
                            <%= f.text_field :phone, :placeholder => Spree.t(:phone) %>
                          </label>
                        </div>

                        <!-- <label class="recaptcha"><span class="empty-message">*This field is required.</span></label> -->
                        <div class="btns">

                          <%= f.submit 'Submit', :class => 'btn-default btn4', id: 'sbmt_lnk' %>
                        </div>

                      </fieldset>

                      <% if params.key?(:c)%>
                        <%= hidden_field_tag :ref_code, params[:c]%>

                        <% unless @from_url.nil? %>
                              <%= hidden_field_tag :from_url, @from_url%>
                        <% end %>

                      <% end %>

                  <% end %>

                  <!--<div class="contact-form-loader"></div>-->

                </div>

              </div>
            </div>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<div data-hook="signup_below_password_fields"></div>

